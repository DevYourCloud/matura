{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}

    <article class="grid login">
        <div>
            <hgroup>
                <h1>Sign in</h1>
                <h2>To access to your dashboard</h2>
            </hgroup>
            <form action="{{ path('app_login') }}" method="post">
                <input type="text" name="_username" placeholder="Login" aria-label="Login" value="{{ last_username }}" required>
                <input type="password" name="_password" placeholder="Password" aria-label="Password" autocomplete="current-password" required>
                <fieldset>
                    <label for="remember">
                        <input type="checkbox" role="switch" id="remember" name="_remember_me">
                        Remember me
                    </label>
                </fieldset>
                {% if error %}
                    <small class="error text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                {% endif %}
                <button type="submit" class="contrast">Login</button>
            </form>
        </div>
        <div></div>
    </article>

{% endblock %}
