<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h2>{{ "app.admin.access_code.add_device"|trans }}</h2>
        </div>
        {{ form_start(form) }}
            <em>{{ "app.admin.access_code.add_device_with_code"|trans }}</em>
            <div class="form-group mt-2">
                {{ form_widget(form.access_code, {'attr': {'class': 'form-control'}})}}
            </div>

            <div class="text-right">
                <input type="submit" class="btn btn-primary" value="{{ "app.admin.access_code.validate"|trans }}">
            </div>
        {{ form_end(form) }}
    </div>  
</div>