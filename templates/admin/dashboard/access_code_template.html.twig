<div class="card">
    <div class="card-body">
        <div class="card-title mb-2">
            <h2><i class="fa fa-computer"></i> {{ "app.admin.access_code.add_device"|trans }}</h2>
        </div>
        {{ form_start(form) }}
            <div class="alert alert-info mb-2"><i class="fas fa-circle-info"></i> &nbsp;{{ "app.admin.access_code.how_to_get_code"|trans }}</div>
            
            <div class="form-group mt-1">
                <label>{{ "app.admin.access_code.add_device_with_code"|trans }}</label>
                {{ form_widget(form.access_code, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="text-right">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}
    </div>  
</div>
